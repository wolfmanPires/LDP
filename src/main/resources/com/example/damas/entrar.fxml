<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.damas.EntrarController" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="IP:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="ipField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Porta:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="portField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Continuar" onAction="#handleContinue" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>